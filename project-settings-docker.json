{

    "logging-config": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "colored": {
                "()": "colorlog.ColoredFormatter",
                "format": "%(log_color)s%(asctime)s_%(filename)15s:[%(lineno)d]_%(levelname)-8s> %(message)s",
                "datefmt": "%d.%m.%y_%H:%M",
                "log_colors": {
                    "DEBUG":    "cyan",
                    "INFO":     "green",
                    "WARNING":  "yellow",
                    "ERROR":    "purple",
                    "CRITICAL": "red"
                }
            }
        },
        "handlers": {
            "stdout": {
                "class": "logging.StreamHandler",
                "formatter": "colored",
                "stream": "ext://sys.stdout"
            },
            "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "formatter": "colored",
                "filename": "/var/log/vivoac.log",
                "maxBytes": 10000,
                "backupCount": 10
            }
        },
        "loggers": {
            "": {
                "handlers": ["stdout", "file"],
                "level": "INFO"
            }
        }
    }
}