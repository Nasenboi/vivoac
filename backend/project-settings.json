{
    "metadata": {
        "name": "vivoac",
        "description": "ViVoAC API",
        "version": "0.0.0",
        "author": "Christian BÃ¶ndgen",
        "settings-theme": "main",
        "api_version": "0.0.0",
        "api_min_version": "0.0.0"
    },
    "fastapi-settings": {

        
    },
    "uvicorn-settings": {
        "host": "0.0.0.0",
        "port": 8080
    },
    "directories": {
        "piper_voices": "./data/piper_voices",
        "temp": "./data/temp"
    },
    "database": {
        "url": "mongodb://localhost:27017",
        "name": "vivoac"
    },
    "logging-config": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "colored": {
                "()": "colorlog.ColoredFormatter",
                "format": "%(log_color)s%(levelname)8s:%(asctime)s_[%(lineno)03d]_%(filename)-20s> %(message)s",
                "datefmt": "%d.%m.%y_%H:%M",
                "log_colors": {
                    "DEBUG":    "cyan",
                    "INFO":     "green",
                    "WARNING":  "yellow",
                    "ERROR":    "purple",
                    "CRITICAL": "red"
                }
            }
        },
        "handlers": {
            "file": {
                "class": "logging.handlers.TimedRotatingFileHandler",
                "formatter": "colored",
                "when": "D",
                "backupCount": 0,
                "filename": "./data/logs/vivoac.log"
            },
            "stdout": {
                "class": "logging.StreamHandler",
                "formatter": "colored",
                "stream": "ext://sys.stdout"
            }
        },
        "loggers": {
            "": {
                "handlers": ["stdout", "file"],
                "level": "DEBUG"
            }
        }
    }
}