{

    "logging-config": {
        "version": 1,
        "disable_existing_loggers": false,
        "formatters": {
            "colored": {
                "()": "colorlog.ColoredFormatter",
                "format": "%(log_color)s%(levelname)8s:%(asctime)s:[%(lineno)03d]_%(filename)-15s> %(message)s",
                "datefmt": "%d.%m.%y_%H:%M",
                "log_colors": {
                    "DEBUG":    "cyan",
                    "INFO":     "green",
                    "WARNING":  "yellow",
                    "ERROR":    "purple",
                    "CRITICAL": "red"
                }
            }
        },
        "handlers": {
            "stdout": {
                "class": "logging.StreamHandler",
                "formatter": "colored",
                "stream": "ext://sys.stdout"
            },
            "file": {
                "class": "logging.handlers.TimedRotatingFileHandler",
                "formatter": "colored",
                "when": "D",
                "backupCount": 0,
                "filename": "./logs/vivoac.log"
            }
        },
        "loggers": {
            "": {
                "handlers": ["stdout", "file"],
                "level": "DEBUG"
            }
        }
    }
}